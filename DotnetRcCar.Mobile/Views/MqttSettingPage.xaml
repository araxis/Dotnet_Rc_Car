<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetRcCar.Mobile.Views.MqttSettingPage"
             Title="NewPage1"
             >
    <StackLayout  Padding="5,5">
        <Label Text="Host" />
         <Entry  Keyboard="Plain" Placeholder="Enter Host" Text="{Binding Host, Mode=TwoWay}"/>
        <Label Text="Port" />
         <Entry  Keyboard="Numeric" Placeholder="Enter Port" Text="{Binding Port,Mode=TwoWay}"/>
      
        <Button Text="Connect" Command="{Binding SubmitCommand}">
               
        </Button>
    </StackLayout>
</ContentPage>